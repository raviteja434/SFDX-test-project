<apex:page standardController="Account">
    <apex:form >
        <apex:pageBlock title="Hello {!$User.LastName}!">
            You are viewing the {!account.name} account. <p/>
            Change Account Name: <p/>
            <apex:inputField value="{!account.name}"/> <p/>
            Zipcdoe : <apex:inputField value="{!account.Zipcode__c}"/> <p/>
            Total : <apex:inputField value="{!account.Total__c}"/> <p/>
            Test Hours :<apex:inputField value="{!account.Test_Hours__c}"/> <p/>
            Phone : <apex:inputField value="{!account.Phone}"/> <p/>
            Type: <apex:inputField value="{!account.Type}"/> <p/>
            <apex:commandButton action="{!save}" value="Save New Account Name"/>
        </apex:pageBlock>
  </apex:form>
</apex:page>